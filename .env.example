# Supabase Configuration
SUPABASE_URL=your-supabase-project-url
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# Application Settings
APP_ENV=development
DEBUG=True

# LLM Provider API Keys (Optional - Local models work without these)
# OPENAI_API_KEY=your-openai-api-key
# MISTRAL_API_KEY=your-mistral-api-key
# GOOGLE_API_KEY=your-google-api-key

# Local LLM Configuration
# These settings will be used when running models locally
LOCAL_MODEL_CACHE_DIR=~/.cache/huggingface
LOCAL_MODEL_DEVICE=auto  # Options: cpu, cuda, auto
LOCAL_MODEL_QUANTIZATION=4bit  # Options: 4bit, 8bit, none
